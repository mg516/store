@import "../../utils/signUp/signUp.wxss";
page{
  background-color: #fafafa;
}
/* 头像区域 */
.headBoxlag{
  background-color: #fff;
  width: 750rpx;
  padding-bottom:10rpx;
}
.headBox{
  margin: 30rpx auto 6rpx;
  width: 690rpx;
  height: 144rpx;
  box-shadow:0px 0px 6px #eee;
  border-radius: 10rpx;
  padding: 30rpx 0;
  box-sizing: border-box;
}
.headBox>view{
  display: inline-block;
  vertical-align: middle;
  margin-left: 24rpx;
}
.headPic{
  width: 76rpx;
  height: 76rpx;
  border-radius:10rpx;
  overflow:hidden;
}
.userInfo{
  position: relative;
  width: 510rpx;
  padding-left: 20rpx;
  box-sizing: border-box;
  /* border-right: 2rpx solid #dddddd; */
}
.nickname{
  font-size: 28rpx;
  color: #1e1e1e;
}
.usernum{
  font-size: 28rpx;
  color: #999999;
}
.msgBox{
  position: relative;
  width: 46rpx;
  height: 46rpx;
  padding-left: 10rpx;
}
.msgBox>.msgBar{
  position: absolute;
  top: -16rpx;
  left: 30rpx;
  border: 2rpx solid #fa7d47;
  border-radius: 16rpx;
  min-width: 32rpx;
  text-align: center;
  box-sizing: border-box;
  color: #fa7d47;
  font-size: 20rpx;
  line-height: 30rpx;
  padding: 0 8rpx;
  background-color: #fff;
}
.locationLi{margin-top: 10rpx;}
.locationLi>view{display: inline-block;vertical-align: middle;}
.location{width: 30rpx;height: 30rpx;}
.locationText{font-size:28rpx;color:#1e1e1e;text-indent: 10rpx;width: 460rpx;}
/* 功能块1 */
.block{
  padding: 12rpx 30rpx;
  box-sizing: border-box;
  width: 750rpx;
  background-color: #fff;

  margin-top: 10rpx;
}
.blockBox>.block:nth-of-type(1){
  margin-top: 0;
}
.block>.title{
  line-height: 50rpx;
  font-size: 30rpx;
  color: #999999;
}
.appBox>.appItem{
  display: inline-block;
  vertical-align: middle;
  width: 50%;
  padding: 8rpx 0;
}
.appItem>view{
  display: inline-block;
  vertical-align: middle;
  font-size: 28rpx;
}
.appItem>.iconBox{
  width: 70rpx;
  height: 70rpx;
  margin-right: 20rpx;
}
.appIcon{
  width: 34rpx;
  height: 34rpx;
}
.block2,.block3{
  margin-top: 10rpx;
}