/* pages/check-add/check-add.wxss */
page{
  padding-bottom:40rpx;
}
.root-section1{
  margin:20rpx 30rpx;
}
.goods-title{
  height:60rpx;
  line-height: 60rpx;
  font-size:32rpx;
  padding:20rpx 0;
}
.goods-style{
  width:5px;
  float:left;
  height:40rpx;
  margin:10rpx 0;
  background-color: #24ae5f;
  border-radius:20rpx;
}
.goods-name{
  margin-left:20rpx;
  float:left;
}
.goods-view{
  box-shadow: 0 0 10px #e5e5e5;
  padding:20rpx 30rpx;
  border-radius:20rpx;
}
.goods-box{
  display: flex;
  font-size:30rpx;
  padding:10rpx 0;
}
.box-name{
  display: table-cell;
  height:60rpx;
  line-height: 60rpx;
  width:31%;
  color:#808080;
}
.box-input{
  display: table-cell;
  height:60rpx;
  line-height: 60rpx;
  margin-left:20rpx;
  border:1px solid #e5e5e5;
  border-radius:10rpx;
  padding-left:10rpx;
  width:70%;
}
.box-input1{
  display: table-cell;
  margin-left:20rpx;
  border:1px solid #f1f1f1;
  border-radius:10rpx;
  padding-left:10rpx;
  width:70%;
}
.root-section2{
  margin:20rpx 30rpx;
}
.goods-del{
  width:24rpx;
  height:30rpx;
  float:right;
  padding:16rpx;
}
/* 继续添加商品 */
.goods-add{
  padding:20rpx 0;
  height:60rpx;
  line-height: 60rpx;
  text-align: center;
  font-size:30rpx;
  margin:0 auto;
  width:40%;
}
.goods-add image{
  width:40rpx;
  height:40rpx;
  display: block;
  margin:10rpx;
  float: left;
}
.goods-text{
  height: 60rpx;
  line-height: 60rpx;
  color:#24ae5f;
  float: left;
}
/* 提交 */
.submit{
  width:40%;
  margin:30rpx auto;
  background-color: #24ae5f;
  color:#fff;
  border-radius:40rpx;
  height:90rpx;
  line-height: 90rpx;
  text-align: center;
  font-size:32rpx;
}