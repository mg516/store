.moneyBox{padding: 20rpx 20rpx;}
.moneyBox>view{display: inline-block;}
.moneyBox>.ableMoney{font-size: 24rpx;color: #918F97;}
.moneyBox>.handle_allMoney{font-size: 28rpx;color: #201E25;text-indent: 50rpx;}

.handle_reflect{
  margin: 60rpx auto 0;
  width: 690rpx;
  height: 80rpx;
  background: linear-gradient(to right, #7DDD73 , #66D964);
  border-radius: 40rpx;
  line-height: 80rpx;
  text-align: center;
  color: #fff;
  font-size: 34rpx;
}
.handle_label{color: #918F97;font-size: 24rpx;text-align: left;width: 690rpx;text-indent: 20rpx;margin-top: 20rpx;}