page{background-color: #FAFAFA;}

.dataGroup{width: 100%;background-color: #fff;padding: 0 30rpx;border-bottom: 10rpx solid #FAFAFA;}
.dataItem>view{display: inline-block;vertical-align: middle;line-height: 92rpx;}
.dataItem>.label{width: 30%;text-align: left;color: #201E25;font-size: 28rpx;}
.dataItem>.value{width: 70%;text-align: right;color: #918F97;font-size: 28rpx;}
.headpic{width: 120rpx;height: 120rpx;border-radius: 50%;overflow: hidden;display:inline-block;}

.label>view{display: inline-block;vertical-align: middle;}
.location{width: 30rpx;height: 30rpx;margin-right: 10rpx;}

.liner{position: relative;}
.liner::after{
  content: '';
  width:690rpx;
  height: 2rpx;
  background-color: #F5F5F5;
  display: block;
  position: absolute;
  bottom: 0;
  left: 0rpx;
}