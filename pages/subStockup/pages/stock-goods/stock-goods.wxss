/* pages/stock-goods/stock-goods.wxss */
.list-box{
  position: fixed;
  top:0;
  left:0;
  z-index:9;
  width:100%;
  background-color:#fff;
}
.list-box>view{
  display: inline-block;
  vertical-align: middle;
}
/* 搜索栏 */
.list-search{
  width: 620rpx;
  height:60rpx;
  margin: 15rpx 0 15rpx 15rpx;
  background-color:#f9f9f9;
  border-radius:10rpx;
  position: relative;  
  padding:5rpx 0;
}
.search-icon{
  width:40rpx;
  height:40rpx;
  position: absolute;
  top:10rpx;
  left:10rpx;
  margin:5rpx;
}
.search-input{
  font-size:30rpx;
  height:60rpx;
  line-height: 60rpx;
  padding-left:66rpx;
  width:500rpx;
}
.place-style{
  font-size:28rpx;
}
.delect-icon{
  width:40rpx;
  height:40rpx;
  position: absolute;
  top:10rpx;
  right:10rpx;
  margin:5rpx;
}

/* 选择列表 */
.choose-box{
  border-bottom:1rpx solid #f1f1f1;
  height:90rpx; 
  background-color:#fff;
  position: fixed;
  top:90rpx;
  left:0;
  width:100%;
  z-index: 1;
}  
.choose-list{
  float: left;
  padding: 25rpx 0;
  font-size: 30rpx;
  width: calc(100% /3);
  text-align: center; 
}
.choose-color{
  border-bottom: 3px solid #24ae5f;
  padding:18rpx 0;
  color: #24ae5f;
}

.detail-view{
  background-color:#fff;
  /* margin-top:180rpx; */
}
.detail-box{
  display: flex;
  font-size:30rpx;
  color:#808080;
  border-bottom:1px solid #f1f1f1;
  padding:20rpx 0;
  position: fixed;
  top:178rpx;
  width:100%;
  background-color:#fff;
}
.goods-single{
  text-align: center;
  padding:10rpx 0;
}
/* 条码 */
.detail-code{
  color:#808080;
  font-size:28rpx;
  padding:10rpx 0;
}
.goods-list{
  flex:5;
  text-align: left;
  padding-left:20rpx;
}
