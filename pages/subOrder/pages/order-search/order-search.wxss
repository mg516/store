.mainBox{
  position: fixed;
  top: 120rpx;
  left: 0;
  right: 0;
  bottom: 0;
}
.mainBox>view{
  display: inline-block;
  width: 750rpx;
}
.mainBox>.mainLeft{
  width: 150rpx;
  /* height: 100%; */
  box-shadow:2rpx 2rpx 5rpx #eee;
  vertical-align: top;
  overflow-y: scroll;
  position: absolute;
  top: 40rpx;
  bottom: 0;
  left: 0;
}
.mainBox>.mainRight{
  width:590rpx;
  /* height:100%; */
  vertical-align:top;
  margin-left:10rpx;

  position:absolute;
  top:0;
  left: 150rpx;
  bottom:200rpx;
}
.mainRight>scroll-view{
  width: 100%;
  height: 100%;
}
