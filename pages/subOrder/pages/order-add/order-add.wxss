/* pages/request-add/request-add.wxss */
@import '../../../../utils/inputModal/inputModal.wxss';
page{
  padding-bottom:40rpx;
}
.root-section1{
  margin:20rpx 30rpx;
}

.bigMoney{
  /* color: #FC7903; */
  font-size: 32rpx;
  font-weight: bold;
}

.goods-view{
  box-shadow: 0 0 10px #e5e5e5;
  padding:36rpx 30rpx;
  border-radius:20rpx;
}
.goods-box{
  display: flex;
  font-size:30rpx;
  padding:10rpx 0;
}
.box-name{
  display: table-cell;
  height:60rpx;
  line-height: 60rpx;
  width:22%;
  color:#808080;
}
.box-view{
  display: table-cell;
  height:60rpx;
  line-height: 60rpx;
  margin-left:20rpx;
  width:70%;

  border:2rpx solid #eeeeee;
  padding:0 20rpx;
  box-sizing:vorder-box;
  border-radius: 4rpx;
}




/* 详细信息 */
.root-section2{
  margin:20rpx 30rpx;
}
.goods-del{
  width:24rpx;
  height:30rpx;
  float:right;
  padding:16rpx;
}
/* 商品信息头部 */
.goods-title{
  height:60rpx;
  line-height: 60rpx;
  font-size:32rpx;
  padding:20rpx 0;
}
.goods-style{
  width:5px;
  float:left;
  height:40rpx;
  margin:10rpx 0;
  background-color: #24ae5f;
  border-radius:20rpx;
}
.goods-name{
  margin-left:20rpx;
  float:left;
}
/* 商品信息 */
.goods-box1{
  font-size:32rpx;
  padding:10rpx 0;
  /* height:60rpx; */
  line-height: 60rpx;
}
.name-box{
  float:left;
  font-size:34rpx;
}
.number-box{
  float:right;
  font-size:30rpx;
  color:#808080;
}
.input-list{
  float:left;
  width:230rpx;
  margin-right:15rpx;
  border-bottom:1px solid #ccc;
  font-size:30rpx;
  color:#808080;
}
.place-style{
  font-size:30rpx;
}
.unit-list{
  float:left;
  color:#808080;
  font-size:26rpx;
}
.price-view{
  float:left;
  color:#808080;
  font-size:26rpx;
  padding-right: 20rpx;
}
.total-view{
  float:left;
  color:#808080;
  font-size:26rpx;
}
.price-style{
  color:#FC7903;
  font-size:34rpx;
  display:inline-block;
  min-width:200rpx;
  text-align: center;
}


/* 继续添加商品 */
.goods-add{
  padding:20rpx 0;
  height:60rpx;
  line-height: 60rpx;
  text-align: center;
  font-size:30rpx;
  margin:0 auto;
  width:28%;
}
.goods-add image{
  width:40rpx;
  height:40rpx;
  display: block;
  margin:10rpx;
  float: left;
}
.goods-text{
  height: 60rpx;
  line-height: 60rpx;
  color:#24ae5f;
  float: left;
}
/* 提交 */
.submit{
  width:40%;
  margin:30rpx auto;
  background-color: #24ae5f;
  color:#fff;
  border-radius:40rpx;
  height:90rpx;
  line-height: 90rpx;
  text-align: center;
  font-size:32rpx;
}

.goods_li{
  width: 100%;
  padding-bottom: 20rpx;
}
.li_name{
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  width: 400rpx;

  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.li_detail{
  margin-bottom: 10rpx;
}
.li_detail>view{
  display: inline-block;
  /* height: 50rpx; */
  vertical-align: middle;
  margin-right: 10rpx;
  /* line-height: 40rpx; */
}
.li_index{
  font-size: 28rpx;
  width: 20rpx;
  line-height: 36rpx;
  margin-right: 10rpx;
}
.li_numberBox>view,.li_numberBox>input{
  display: inline-block;
  vertical-align: middle;
}
.li_numberBox>.reduce,.li_numberBox>.add{
  /* width: 36rpx;
  height: 36rpx;
  background-color: #fff;
  color: #24ae5f;
  border: 2rpx solid #24ae5f;
  border-radius: 6rpx;
  line-height: 30rpx;
  text-align: center; */
  width: 38rpx;
  height: 34rpx;
}
.li_numberBox>.li_num{
  width:90rpx;
  /* border-bottom: 2rpx solid #24ae5f; */
  color: #24ae5f;
  font-weight: bold;
  font-size: 28rpx; 
  margin: 0 4rpx;
  text-align: center;
  position: relative;
}
.li_numberBox>.li_num::after{
  content: '';
  display: block;
  width: 60rpx;
  height: 2rpx;
  background-color: #24ae5f;
  position: absolute;
  bottom: 0;
  left: 15rpx;
}
.li_price{
  width: 200rpx;
  font-size: 24rpx;
  line-height: 36rpx;
  color: #666666;
  margin-right: 10rpx;
  text-align: right;
}
.li_totals{
  width: 430rpx;
  font-size: 24rpx;
  color: #666666;
  text-align: right;
}
.rmb,.totals{
  color: #FC7903;
}