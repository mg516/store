@import '../../../../utils/appList.wxss';
.ul{padding-top: 180rpx;}
.wait-box{position: relative;}
.orderStatus{
  position: absolute;
  top: 0;
  right: 0;
  width: 98rpx;
  height: 90rpx;
}
.callPhoneBar,.orderStatusBar{
  display: inline-block;
  width: 146rpx;
  height: 48rpx;
  line-height: 48rpx;
  font-size: 28rpx;
  text-align: center;
  border-radius: 26rpx;
}
.callPhoneBar{
  border: 2rpx solid #24ae5f;
  color: #24ae5f;
}
.orderStatusBar{
  margin-left: 20rpx;
  background-color: #24ae5f;
  color: #fff;
}
.search-box{
  position:fixed;
  width:750rpx;
  background-color:#fff;
  z-index:1;
  top:0;
  /* top:100rpx; */
  left: 0;
}
.search-input{
  width: 380rpx;
}
._timePicker{
  width: 490rpx;
  display: inline-block;
  vertical-align: top;
  margin: 15rpx 0 15rpx 20rpx;
}
._orderStatus{
  width: 200rpx;
  display: inline-block;
  vertical-align: top;
  margin: 15rpx 0 15rpx 20rpx;
}
.order-picker{
  color:#808080;
  font-size:30rpx;
  margin:0 10rpx;
  width:180rpx;
  text-align:center;
}
.choose-list{
  float: left;
  padding: 25rpx 0;
  font-size: 30rpx;
  width: calc(100% / 2);
  text-align: center; 
}


.nomore{
  text-align:center;
  font-size:28rpx;
  color:#666;
  line-height:40rpx;
  padding-bottom:20rpx;
}
.callPhoneImg{
  display:inline-block;
  vertical-align:middle;
  height:40rpx;
  width:40rpx;
  margin-left:10rpx;
}