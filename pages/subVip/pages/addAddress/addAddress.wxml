<view class="container">
  <form bindsubmit="formSubmit">
    <view class='group_cont'>
      <view class='card_ul'>
        <view class='card_li'>
          <view class='card_label'>收货人姓名</view>
          <view class='card_value'><input name='sh_name' placeholder='收货人' placeholder-class='pTexta'></input></view>
        </view>
        <view class='card_li'>
          <view class='card_label'>手机号</view>
          <view class='card_value'><input name='sh_phone' type='number' placeholder='手机号' placeholder-class='pTexta'></input></view>
        </view>
        <view class='card_li'>
          <view class='card_label'>所在地区</view>
          <view class='card_value'>
            <picker mode="region" name='sh_addr' bindchange="bindRegionChange" value="{{region}}" custom-item="{{customItem}}">
              <view class="picker">
                {{region[0]!=customItem?region[0]:'选择地区'}}{{region[1]!=customItem?region[1]:''}}{{region[2]!=customItem?region[2]:''}}
              </view>
            </picker>
          </view>
        </view>
        <view class='card_li'>
          <view class='card_label cl_top'>详细地址</view>
          <view class='card_value'>
            <textarea name='sh_address' placeholder="详细地址" placeholder-class='pTexta'></textarea>
          </view>
        </view>
      </view>
    </view>
    <view class='submit vbtn'>确认添加<button formType="submit"></button></view>
  </form>
</view>