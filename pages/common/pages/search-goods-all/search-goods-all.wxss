@import '../../../../utils/appList_details.wxss';
@import '../../../../utils/inputModal/inputModal.wxss';
.table_row2{
  line-height: 50rpx;
}
.contTl>view:nth-of-type(1){
  height: 100rpx;
  /* font-size: 26rpx; */
}
.contTl>view{
  height: 130rpx;
}
.table_bold{
  font-weight:bold;
  color:#222222;
}
.table_lighter{
  color: #666;
  font-size: 24rpx;
}


.serach-box{
  width:100%;
  padding:10rpx 0;
  box-shadow: 0 0 2px #e5e5e5;

  position: fixed;
  /* width: 750rpx; */
  top: 0;
  left: 0;
  background-color: #fff;

  z-index: 3;
}
.list-search{
  width: 94%;
  height:60rpx;
  margin: 15rpx auto;
  background-color:#f1f1f1;
  border-radius:20rpx;
  position: relative;  
  padding:5rpx 0;
}
.search-icon{
  width:40rpx;
  height:40rpx;
  position: absolute;
  top:10rpx;
  left:10rpx;
  margin:5rpx;
}
.search-input{
  font-size:30rpx;
  height:60rpx;
  line-height: 60rpx;
  padding-left:60rpx;
  width:80%;
}
.delect-icon{
  width:40rpx;
  height:40rpx;
  position: absolute;
  top:10rpx;
  right:10rpx;
  margin:5rpx;
}

.mainBox{padding-top: 120rpx;}
.mainBox>view{display: inline-block;vertical-align: top;}
.mainBox>.mainLeft{
  width: 150rpx;
  box-shadow:2rpx 2rpx 5rpx #eee;
  vertical-align: top;
  overflow-y: scroll;
  position: fixed;
  top: 120rpx;
  bottom: 0;
  left: 0;
  transition: all .1s linear;
}
.mainLeft.searching{left: -150rpx;}

.mainBox>.mainRight{width:590rpx;vertical-align:top;margin-left:10rpx;padding-left: 150rpx;transition: all .1s linear;}
.mainRight.searching{width: 750rpx;padding-left: 0;}
.mainRight>scroll-view{width: 100%;height: 100%;padding-bottom:160rpx;}

.pName{
  font-size: 30rpx;
  text-align: center;
  width: 100%;
  color: #666;
  padding: 26rpx 0;
  line-height: 40rpx;
  font-weight: bold;
}
.cNameBox{
  min-height: 6rpx;
}
.cName{
  font-size: 24rpx;
  text-align: center;
  width: 100%;
  color: #666;
  padding: 14rpx 0;
  line-height: 34rpx;
}
.activeI{
  color: #24ae5f;
}

/* 加减 */
.numberBox{padding: 0 10rpx;}
.numberBox>view,.numberBox>input{display: inline-block;vertical-align: middle;}
.numberBox>.reduce,.numberBox>.add{width: 38rpx;height: 34rpx;}
.numberBox>.li_num{
  width:100rpx;
  min-width:70rpx;
  border-bottom: 2rpx solid #24ae5f;
  color: #24ae5f;
  font-weight: bold;
  font-size: 28rpx; 
  margin: 0 4rpx;
  text-align: center;
}
/* 采购按钮 */
.caigou{width: 100rpx;line-height: 40rpx;border-radius: 10rpx;border: 2rpx solid #24ae5f;margin:30rpx auto;}

.nextStep{
  width: 590rpx;
  height: 160rpx;
  background-color: #fff;
  text-align: center;
  font-size: 32rpx;
  position: fixed;
  bottom: 0;
  right: 0;
  z-index: 2;
  transition: all .1s linear;
}
.nextStep.searching{width:750rpx;}
.nextStep>.handleBar{margin: 40rpx auto 0;background-color: #24ae5f;color: #fff;width: 220rpx;line-height: 80rpx;border-radius: 40rpx;}

