.formBg {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100vh;
  z-index: 200;
  background: rgba(0, 0, 0, 0.65);
}

.formContent {
  animation: show 2s;
  width: calc(90% - 40rpx);
  margin-left: 5%;
  margin-top: 20vh;
  border-radius: 20rpx;
  background: white;
  padding: 20rpx;
}

.formTitle {
  text-align: center;
  font-size: 40rpx;
  letter-spacing: 5rpx;
}

/* 表单 */

.inputbox {
  position: relative;
  width: 90%;
  margin-left: 5%;
  border-radius: 50px;
  border: 1px solid #ccc;
  box-shadow: 2px 2px 2px #ccc;
  margin-top: 30rpx;
  margin-bottom: 20rpx;
}

input {
  height: 80rpx;
  font-size: 32rpx;
  color: #595959;
  padding-left: 80rpx;
}

.placeholder {
  font-size: 28rpx;
  line-height: 80rpx;
  width: 340rpx;
}

.delect {
  width: 120rpx;
  height: 120rpx;
  position: absolute;
  left: 50%;
  margin-left: -60rpx;
  top: 20vh;
  margin-top: -120rpx;
  animation: show 2s;
}

.getCode {
  position: absolute;
  right: 10rpx;
  top: 0;
  height: 60rpx;
  width: 200rpx;
  color: white;
  line-height: 60rpx;
  font-size: 28rpx;
  text-align: center;
  border-radius: 20px;
  margin-top: 10rpx;
  background: #6fba2c;
  box-shadow: 2px 2px 2px #999;
  z-index: 2;
}

.submit {
  width: 90%;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 36rpx;
  margin-top: 40rpx;
  margin-bottom: 20rpx;
  margin-left: 5%;
  background: #6fba2c;
  box-shadow: 2px 2px 2px #999;
  border-radius: 40px;
  color: white;
}

.regist_icon {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  top: 20rpx;
  left: 30rpx;
}

/* 输入框选中效果 */

.currentColor {
  border: 2px solid #6fba2c;
}

@keyframes show {
  from {
    opacity: 0;
  }

  to {
    opacity: 1;
  }
}

